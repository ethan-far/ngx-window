{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-window": {
      "projectType": "library",
      "root": "projects/ngx-window",
      "sourceRoot": "projects/ngx-window/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-window/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-window/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-window/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-window/src/test.ts",
            "tsConfig": "projects/ngx-window/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-window/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-window/**/*.ts",
              "projects/ngx-window/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ngx-window",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
